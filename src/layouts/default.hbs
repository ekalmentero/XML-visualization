<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{{title}} | {{site.title}}</title>
    <link rel="stylesheet" href="{{assets}}/assemble.css">
    <link rel="stylesheet" href="{{assets}}/github.css">
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-33358518-13', 'assemble.github.io');
      ga('send', 'pageview');

    </script>
  </head>
  <body style="background: white;">

    {{! NAVBAR
    =================================== }}
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="navbar-brand" href="{{relative page.dest "./index.html"}}">ASSEMBLE</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="nav-collapse collapse bs-navbar-collapse">
            <ul class="nav navbar-nav pull-right">
              <li{{#is title "Blog"}} class="active"{{/is}}>
                <a href="{{relative page.dest "./posts.html"}}">Blog</a>
              </li>
              <li> <a href="http://assemble.io" onclick="_gaq.push(['_trackEvent', 'Navbar', 'clicked', 'Assemble Docs']);">Assemble Docs</a> </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    {{! MASTHEAD
    =================================== }}
    <header class="masthead subhead">
      <div class="container">
        <div class="row">
          <div class="col col-lg-12">
            <h1> {{#if section}}{{ uppercase section }} {{else}} {{ uppercase title }}{{/if}} </h1>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div class="panel-docs">

          {{! SIDE NAVIGATION
          =================================== }}
          <div class="col col-lg-3">
            <div class="sidebar">
              <span class="nav-section-title">
                Posts
              </span>
              <ul class="nav nav-pills nav-stacked">
                {{#each pages}}
                  {{#is data.section "Blog"}}
                  <li{{#is ../../page.dest this.dest}} class="active"{{/is}}><a href="{{relative ../../page.dest this.dest}}">{{data.title}}</a></li>
                  {{/is}}
                {{/each}}
              </ul>
            </div>
          </div>

          {{! MAIN CONTENT
          =================================== }}
          <div class="col col-lg-9" style="padding-left: 60px;">
            <h1>{{page.title}}</h1>
            {{> body }}
          </div>


        </div>
      </div>
    </div>
    <script src="{{assets}}/js/highlight.js"></script>
  </body>
</html>